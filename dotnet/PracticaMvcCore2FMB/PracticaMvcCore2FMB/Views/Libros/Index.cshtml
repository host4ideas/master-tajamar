@model IEnumerable<PracticaMvcCore2FMB.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

@{
    int siguiente = int.Parse(ViewData["SIGUIENTE"].ToString());
    int anterior = int.Parse(ViewData["ANTERIOR"].ToString());
}

<h1>Libros</h1>

<div class="btn-group" role="group" aria-label="Basic example">
    <a class="btn btn-primary" asp-controller="Libros" asp-action="Index" asp-route-posicion="@anterior">Anterior</a>
    <a class="btn btn-primary" asp-controller="Libros" asp-action="Index" asp-route-posicion="@siguiente">Siguiente</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdLibro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editorial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Portada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resumen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdGenero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdLibro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editorial)
                </td>
                <td>
                    <img src="~/images/@Html.DisplayFor(modelItem => item.Portada)" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resumen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGenero)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new {  idLibro=item.IdLibro  })
                </td>
            </tr>
        }
    </tbody>
</table>
