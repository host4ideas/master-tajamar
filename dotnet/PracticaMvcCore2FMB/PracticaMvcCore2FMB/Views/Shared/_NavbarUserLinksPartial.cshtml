    string userImage = Context.User.FindFirstValue("IMAGE");
    string userName = Context.User.FindFirstValue(ClaimTypes.Name);
    string userEmail = Context.User.FindFirstValue(ClaimTypes.Email);
    int userId = int.Parse(Context.User.FindFirstValue(ClaimTypes.NameIdentifier).ToString());
}

<li class="nav-item">
    <a asp-controller="Managed" asp-action="Profile" asp-route-userId="@userId"><img src="~/images/@userImage" width="50" /></a>
</li>
