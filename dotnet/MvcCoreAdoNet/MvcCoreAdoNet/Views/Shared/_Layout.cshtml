<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hello Bulma!</title>
    <link rel="stylesheet" href="~/css/bulma.css">
</head>

<nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="https://bulma.io">
            <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
        </a>

        <a id="hamburguer" role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
        </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
            <a class="navbar-item" asp-controller="Home" asp-action="Index">
                Home
            </a>

            <a class="navbar-item" asp-controller="Home" asp-action="VistaMascota">
                Mascota
            </a>

            <a class="navbar-item" asp-controller="Hospitales" asp-action="Index">
                Hospitales
            </a>

            <a class="navbar-item" asp-controller="Doctores" asp-action="DoctoresEspecialidad">
                Doctores
            </a>

            <a class="navbar-item" asp-controller="Doctores" asp-action="DoctoresHospital">
                Doctores por hospital
            </a>
        </div>

        <div class="navbar-end">
            <div class="navbar-item">
                <div class="buttons">
                    <a class="button is-primary">
                        <strong>Sign up</strong>
                    </a>
                    <a class="button is-light">
                        Log in
                    </a>
                </div>
            </div>
        </div>
    </div>
</nav>

<body>
    <section class="section">
        <div class="container">
            <h1 class="title">
                Hello World
            </h1>
            @RenderSection("images", false)
            @{
                if (IsSectionDefined("home"))
                {
                    // Mostrar imagen seteada por una vista
                    @RenderSection("home")
                }
                else
                {
                    // Imagen por defecto
                    <img src="~/images/logo10.png" width="250px" />
                }
            }
            @RenderBody()
        </div>
    </section>
</body>
<script src="~/js/jquery-3.6.3.min.js"></script>
<script>
    $(document).ready(function () {
        $("#hamburguer").click(function () {
            $("#navbarBasicExample").toggle("fast");
        })
    })
</script>
@RenderSection("scripts", false)
</html>