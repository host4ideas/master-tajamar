@inject IMemoryCache memoryCache

@{
    ViewData["Title"] = "EmpleadosFavoritos";

    List<Empleado> favoritos = memoryCache.Get<List<Empleado>>("FAVORITOS");
}

<h1>EmpleadosFavoritos</h1>

@if (favoritos != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    APELLIDO
                </th>
                <th>
                    OFICIO
                </th>
                <th>
                    SALARIO
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in favoritos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEmpleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oficio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
