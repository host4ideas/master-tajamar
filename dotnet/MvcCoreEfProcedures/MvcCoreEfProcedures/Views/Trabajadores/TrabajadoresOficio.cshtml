@model TrabajadoresModel

@{
    ViewData["Title"] = "TrabajadoresOficio";
    List<string> oficios = (List<string>)ViewData["OFICIOS"];
}

<h1>TrabajadoresOficio</h1>

<form method="post">
    <label class="form-label">Seleccione un oficio</label>
    <select class="form-control" name="oficio">
        @{
            foreach (var item in oficios)
            {
                <option value="@item">
                    @item
                </option>
            }
        }
    </select>
    <button class="btn btn-success">
        Buscar
    </button>
</form>

@{
    List<Trabajador> trabajadores = new();

    if (Model != null)
    {
        <ul class="list-group">
            <li class="list-group-item">Personas: @Model.Personas</li>
            <li class="list-group-item">Media salarial: @Model.MediaSalarial</li>
            <li class="list-group-item">Suma salarial: @Model.SumaSalarial</li>
        </ul>

        trabajadores = Model.Trabajadores;
    }
    else if (ViewData["TRABAJADORES"] != null)
    {
        trabajadores = (List<Trabajador>)ViewData["TRABAJADORES"];
    }

    <table class="table table-bordered table-warning">
        <thead>
            <tr>
                <th>
                    ID Trabajador
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Oficio
                </th>
                <th>
                    Salario
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in trabajadores)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTrabajador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Oficio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
