@model List<Departamento>
<h1 style="color:red">
    VISTA INDEX DEPARTAMENTOS
</h1>

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>LOCALIDAD</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.IdDepartamento</td>
                    <td>@dept.Nombre</td>
                    <td>@dept.Localidad</td>
                    <td><a asp-controller="Departamentos" asp-action="Details" asp-route-id="@dept.IdDepartamento">👁️‍🗨️</a></td>
                    <td><a asp-controller="Departamentos" asp-action="Delete" asp-route-id="@dept.IdDepartamento">🗑️</a></td>
                    <td><a asp-controller="Departamentos" asp-action="update" asp-route-id="@dept.IdDepartamento">✏️</a></td>
                </tr>
            }
        }
    </tbody>
</table>