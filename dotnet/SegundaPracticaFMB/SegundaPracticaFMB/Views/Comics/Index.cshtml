@model List<Comic>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @{
        foreach (Comic comic in Model)
        {
            <div class="col">
                <div class="card">
                    <img src="@comic.Imagen" class="card-img-top" style="width:100px" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@comic.Nombre</h5>
                        <p class="card-text">@comic.Descripcion</p>
                    </div>
                </div>
            </div>
        }
    }
</div>