@model List<Doctor>

<a asp-controller="Doctores" asp-action="InsertarDoctor">Insertar un nuevo doctor</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>HOSPITAL COD</th>
            <th>DOCTOR Nº</th>
            <th>APELLIDO</th>
            <th>ESPECIALIDAD</th>
            <th>SALARIO</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Doctor doctor in Model)
            {
                <tr>
                    <td>@doctor.HospitalCod</td>
                    <td>@doctor.DoctorCod</td>
                    <td>@doctor.Apellido</td>
                    <td>@doctor.Especialidad</td>
                    <td>@doctor.Salario</td>
                    <td><a asp-controller="Doctores" asp-action="DeleteDoctor" asp-route-iddoctor="@doctor.DoctorCod" class="btn btn-outline-danger">🗑️</a></td>
                </tr>
            }
        }
    </tbody>
</table>