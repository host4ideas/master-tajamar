@model List<Enfermo>

<h1>BUSCADOR DE ENFERMOS</h1>

<a asp-controller="Enfermos" asp-action="Index">Listado enfermos</a>

<form method="post">
    <label>Fecha de nacimiento</label>
    <input type="date" name="fechaNac" class="form-control" required />

    <button class="btn btn-outlin-esuccess">
        Buscar empleados
    </button>
</form>

@{
    if (Model == null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewData["MENSAGE"]
        </div>
    }
}

<table class="table">
    <thead>
        <tr>
            <th>INSCRIPCION</th>
            <th>APELLIDO</th>
            <th>DIRECCION</th>
            <th>FECHA NACIMIENTO</th>
            <th>SEXO</th>
            <th>Nº SEGURIDAD SOCIAL</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                foreach (Enfermo enfermo in Model)
                {
                    <tr>
                        <td>@enfermo.Inscripcion</td>
                        <td>@enfermo.Apellido</td>
                        <td>@enfermo.Direccion</td>
                        <td>@enfermo.FechaNacimiento</td>
                        <td>@enfermo.Sexo</td>
                        <td>@enfermo.Nss</td>
                        <td><a asp-controller="Enfermos" asp-action="Delete" asp-route-inscripcion="@enfermo.Inscripcion" style="colro:red">🗑️</a></td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
