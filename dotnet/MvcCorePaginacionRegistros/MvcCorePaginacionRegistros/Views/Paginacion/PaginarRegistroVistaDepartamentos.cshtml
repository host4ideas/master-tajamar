@model VistaDepartamento

<h1 style="color: blue;">
    Paginación individual Vista Departamentos
</h1>

<h2 style="color: red;">
    Registro @Model.Posicion de @ViewData["ULTIMO"]
</h2>

<div>
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item">
            <a asp-controller="Paginacion" asp-action="PaginarRegistroVistaDepartamentos" asp-route-posicion="1">
                Primero
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Paginacion" asp-action="PaginarRegistroVistaDepartamentos" asp-route-posicion="@ViewData["ANTERIOR"]">
                Anterior
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Paginacion" asp-action="PaginarRegistroVistaDepartamentos" asp-route-posicion="@ViewData["SIGUIENTE"]">
                Siguiente
            </a>
        </li>
        <li class="list-group-item">
            <a asp-controller="Paginacion" asp-action="PaginarRegistroVistaDepartamentos" asp-route-posicion="@ViewData["ULTIMO"]">
                Último
            </a>
        </li>
    </ul>
</div>

<hr />

<ul class="list-group">
    <li class="list-group-item list-group-item-info">
        Número: @Model.DeptNo
    </li>
    <li class="list-group-item list-group-item-info">
        Número: @Model.Nombre
    </li>
    <li class="list-group-item list-group-item-info">
        Número: @Model.Loc
    </li>
</ul>
