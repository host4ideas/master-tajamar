@model List<Genero>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Géneros
    </button>
    <ul class="dropdown-menu">
        @{
            foreach (Genero genero in Model)
            {
                <li>
                    <a class="dropdown-item" asp-controller="Libros" asp-action="LibrosGenero" asp-route-idGenero="@genero.IdGenero" asp-route-nombreGenero="@genero.Nombre">@genero.Nombre</a>
                </li>
            }
        }
    </ul>
</div>
