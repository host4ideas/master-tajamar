@model List<string>

<h1 style="color: blue;">
    Azure Service Bus
</h1>

<form method="post">
    <label>Mensaje en Queue/Topic</label>
    <input type="text" name="mensaje" class="form-control" />

    <button class="btn btn-warning" name="accion" value="enviar">
        Enviar
    </button>
    <button class="btn btn-info" name="accion" value="recibir">
        Recibir mensajes
    </button>
</form>

<h2 style="color:red;">
    @ViewData["MENSAJE"]
</h2>

@{
    if (Model != null)
    {
        <ul class="list-group">
            @{
                foreach (var mensaje in Model)
                {
                    <li class="list-group-item">
                        @mensaje
                    </li>
                }
            }
        </ul>
    }
}
