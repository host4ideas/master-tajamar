<h1 style="color: blue;">
    Email Logic Apps Azure
</h1>

<form method="post">
    <label>Email</label>
    <input type="text" name="email" class="form-control" />

    <label>Asunto</label>
    <input type="text" name="asunto" class="form-control" />

    <label>Mensaje</label>
    <input type="text" name="mensaje" class="form-control" />

    <button class="btn btn-primary">
        Enviar mail
    </button>
</form>

<h2 style="color: red;">
    @ViewData["MENSAJE"]
</h2>
