@model IEnumerable<MvcAzureCosmosDb.Models.Vehiculo>

<h1 style="color: blue;">
    Buscador de codes por marca
</h1>

<form method="post">
    <label class="form-label">Introduzca la marca</label>
    <input type="text" name="marca" class="form-control" />

    <button class="btn btn-primary">
        Buscar
    </button>
</form>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VelocidadMaxima)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        <img src="@item.Imagen" width="300" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VelocidadMaxima)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Update", new {  id=item.Id  }) |
                        @Html.ActionLink("Details", "Details", new {  id=item.Id  }) |
                        @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
