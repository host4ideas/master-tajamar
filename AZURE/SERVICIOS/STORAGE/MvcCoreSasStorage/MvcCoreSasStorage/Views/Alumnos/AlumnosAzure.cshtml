@model IEnumerable<MvcCoreSasStorage.Models.Alumno>

@{
    ViewData["Title"] = "AlumnosAzure";
}

<h1>AlumnosAzure</h1>

<a asp-controller="Alumnos" asp-action="FindAlumnosCursoAzure">Buscar por curso</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAlumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Nota)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.IdAlumno)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Curso)
                    </td>
                    <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("DeleteAlumnoAzure", "DeleteAlumnoAzure", new { partitionKey=item.PartitionKey, rowKey = item.RowKey })
                    </td>
                </tr>
        }
    </tbody>
</table>
