@model IEnumerable<MvcDockerComics.Models.Comic>

@{
    ViewData["Title"] = "Index";
}

<h1>Comics</h1>

<p>
    <a asp-action="Create" asp-controller="Comics">Create New Comic</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdComic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdComic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <img src="@item.Imagen" width="150" />
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { idComic=item.IdComic }) |
                    @Html.ActionLink("Delete", "Delete", new { idComic=item.IdComic })
                </td>
            </tr>
        }
    </tbody>
</table>
